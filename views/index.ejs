<!--include header-->
<%- include('include/_header')%>
<!--/include header-->

    <!-- Main Site-->
    <%- include('include/_sidebar')%>
            <div class="main-site">
                <div class="box-nav d-flex justify-between">
                    <a href="/add_task" class="border-shadow">
                        <span class="text-gradient">Add New Task <i class="fa-solid fa-plus"></i></span>
                    </a>
                </div>
                <div class="box-nav d-flex">
                    <i id="btnList" class="fa-solid fa-list-check icon hidden"></i>
                    <i id="btnCal" class="fa-solid fa-calendar icon"></i>
                </div>
                
                <div class="task-list">
                <!--Form handling-->
                    <form action="/" method="POST">
                        <table class="table">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Task ID</th>
                                    <th>Task Name</th>
                                    <th>Description</th>
                                    <th>Priority</th>
                                    <th>Status</th>
                                    <th>Deadline</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%- include('include/_show')%>
                            </tbody>
                        </table>
                    </form>
                <!--Form handling-->
                </div>

                <div class="task-cal hidden">
                    <div class="wrapper">
                        <header>
                            <p class="current-date">Oktober 2022</p>
                            <div class="icons">
                                <span id="prev" class="material-symbols-rounded">chevron_left</span>
                                <span id="next" class="material-symbols-rounded">chevron_right</span>
                            </div>
                        </header>
                        <div class="calendar">
                            <ul class="weeks">
                                <li>Sun</li>
                                <li>Mon</li>
                                <li>Tue</li>
                                <li>Wed</li>
                                <li>Thu</li>
                                <li>Fri</li>
                                <li>Sat</li>
                            </ul>
                            <ul class="days"></ul>
                        </div>
                    </div>
                </div>        
    </div>
    <!--Form handling-->
</main>
<!-- Main Site-->

<!--include footer-->
<%- include('include/_footer')%>
<!--/include footer-->